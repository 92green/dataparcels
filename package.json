{
  "private": true,
  "scripts": {
    "preversion": "yarn build-all",
    "bootstrap": "yarn lerna bootstrap",
    "build": "lerna run build --parallel --",
    "build-all": "lerna run build-all --parallel --",
    "build-docs": "cp README.md packages/dataparcels/README.md && cp README.md packages/react-dataparcels/README.md && lerna run build-docs --parallel --",
    "flow": "blueflag-test flow",
    "flow-coverage": "blueflag-test flow-coverage -M",
    "lint": "blueflag-test lint --monorepo",
    "test": "yarn jest",
    "test-all": "yarn lint && yarn flow && yarn test && yarn flow-coverage",
    "deploy-docs": "yarn lerna --scope dataparcels-docs run deploy",
    "view-coverage": "yarn run coverage; open ./coverage/lcov-report/index.html",
    "watch": "lerna run watch --parallel --"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/gatsby*",
      "**/gatsby*/**"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.0",
    "babel-preset-blueflag": "^0.6.0",
    "blueflag-test": "0.20.0",
    "lerna": "^2.9.0",
    "proto-babel-plugin-extract-flow-types": "git+ssh://git@github.com/blueflag/proto-babel-plugin-extract-flow-types.git#v0.1.1",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "stampy": "^0.40.0"
  }
}
